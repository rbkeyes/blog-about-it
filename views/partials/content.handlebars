<section class="content-card">
  <div class="col-md-12">
    <div class="content-header">
      <h3>
        {{#if body}}
        {{!-- comment route to add comment - from home only --}}
        <a href="/api/comment/{{id}}">
          {{else}}
          {{!-- dashboard route to update post - from dashboard only --}}
          <a href="/api/dashboard/update/{{id}}">
            {{/if}}
            {{{title}}}</a>
          <p class="signature">-- posted by {{{user.username}}} on {{{format_date date_created}}}.
          </p>
      </h3>
    </div>

    {{#if body}}
    <div class="row content-body">
      <div class="col-md-12">
        <p>{{{body}}}</p>
      </div>
    </div>
    {{!-- if comments, render each comment --}}
    {{#if comments.length}}
    <h5>Comments</h5>
    {{#each comments as |comment|}}
    {{> comments}}
    {{/each}}
    {{/if}}
    {{/if}}


  </div>

</section>